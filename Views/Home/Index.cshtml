@{
    ViewData["Title"] = "Home Page";
}

<!-- Game Container -->
<div class="game-container">
    <h1 class="game-title">Tic-Tac-Toe</h1>

    <!-- Scoreboard -->
    <div class="scoreboard">
        <div class="score">🐱 Cat: <span id="cat-score">0</span></div>
        <div class="score">🐶 Dog: <span id="dog-score">0</span></div>
        <div class="score">➖ Draws: <span id="draw-score">0</span></div>
    </div>

    <!-- AI Toggle -->
    <div class="center-container">
        <button id="ai-toggle" class="btn">Playing vs Player</button>
    </div>

    <!-- Game Board -->
    <div id="board" class="d-grid">
        <button class="cell" id="0"></button>
        <button class="cell" id="1"></button>
        <button class="cell" id="2"></button>
        <button class="cell" id="3"></button>
        <button class="cell" id="4"></button>
        <button class="cell" id="5"></button>
        <button class="cell" id="6"></button>
        <button class="cell" id="7"></button>
        <button class="cell" id="8"></button>
    </div>

    <!-- Status Card -->
    <div id="status-card" class="hidden">
        <p id="status">Game Status Here</p>
    </div>

    <!-- Restart Button -->
    <div class="center-container">
        <button id="restart" class="btn">Restart</button>
    </div>
</div>

<script src="~/js/site.js"></script>